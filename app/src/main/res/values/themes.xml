<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SocietyMS" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:buttonStyleToggle">@style/ToggleButtonStyle</item>
    </style>
    <style name="ToggleButtonStyle">
        <item name="android:textOff">No</item>
        <item name="android:textOn">Yes</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:thumb">@drawable/toggle_thumb</item>
    </style>
</resources>