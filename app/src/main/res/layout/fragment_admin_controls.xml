<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_back"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".fragments.AdminControlsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/sacramento"
            android:text="welcome user"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/controlsLayout"
            android:layout_below="@id/welcomeText"
            >

            <RelativeLayout
                android:id="@+id/alotParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_alignParentStart="true"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/allround_editext">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parking\nAllotment"
                    android:textAlignment="center"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/scheduleMeeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/allround_editext">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule\nMeeting"
                    android:textAlignment="center"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    />

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
